'use client';

import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { X, Plus, Minus, ShoppingCart } from 'lucide-react';
import PropTypes from 'prop-types';

/**
 * Cart Item Component
 * @param {Object} props - Component props
 * @returns {JSX.Element}
 */
export function CartItem({ item, onUpdateQuantity, onRemove }) {
  const calculateTotal = () => Number(item.price || 0) * Number(item.quantity || 1);

  return (
    <div className="flex items-center justify-between p-3 border rounded-lg">
      <div className="flex-1">
        <h4 className="font-medium text-green-700">{item.name || 'Produk'}</h4>
        <p className="text-sm text-gray-600">
          Rp {Number(item.price || 0).toLocaleString('id-ID')} x {item.quantity}
        </p>
        <p className="text-sm font-semibold text-green-600">
          Rp {calculateTotal().toLocaleString('id-ID')}
        </p>
      </div>
      
      <div className="flex items-center gap-2">
        <div className="flex items-center border rounded">
          <Button
            type="button"
            variant="ghost"
            size="sm"
            onClick={() => onUpdateQuantity(item.id, Math.max(1, item.quantity - 1))}
          >
            <Minus className="h-3 w-3" />
          </Button>
          <span className="px-3 py-1 min-w-[40px] text-center">{item.quantity}</span>
          <Button
            type="button"
            variant="ghost"
            size="sm"
            onClick={() => onUpdateQuantity(item.id, item.quantity + 1)}
          >
            <Plus className="h-3 w-3" />
          </Button>
        </div>
        
        <Button
          type="button"
          variant="ghost"
          size="sm"
          onClick={() => onRemove(item.id)}
          className="text-red-600 hover:text-red-800"
        >
          <X className="h-4 w-4" />
        </Button>
      </div>
    </div>
  );
}

/**
 * Order Summary Component
 * @param {Object} props - Component props
 * @returns {JSX.Element}
 */
export function OrderSummary({ cart, subtotal, onClearCart }) {
  return (
    <Card>
      <CardHeader>
        <CardTitle className="flex items-center justify-between">
          <div className="flex items-center gap-2">
            <ShoppingCart className="h-5 w-5" />
            Pesanan ({cart.length} item)
          </div>
          {cart.length > 0 && (
            <Button
              type="button"
              variant="ghost"
              size="sm"
              onClick={onClearCart}
              className="text-red-600 hover:text-red-800"
            >
              Bersihkan
            </Button>
          )}
        </CardTitle>
      </CardHeader>
      <CardContent>
        {cart.length === 0 ? (
          <p className="text-gray-600 text-center py-8">
            Belum ada produk yang dipilih
          </p>
        ) : (
          <div className="space-y-3">
            {cart.map((item) => (
              <CartItem
                key={item.id}
                item={item}
                onUpdateQuantity={() => {}} // Will be connected in parent component
                onRemove={() => {}} // Will be connected in parent component
              />
            ))}
            <div className="border-t pt-3 mt-3">
              <div className="flex justify-between items-center text-lg font-bold text-green-600">
                <span>Total:</span>
                <span>Rp {subtotal.toLocaleString('id-ID')}</span>
              </div>
            </div>
          </div>
        )}
      </CardContent>
    </Card>
  );
}

/**
 * Shopping Cart Component with full functionality
 * @param {Object} props - Component props
 * @returns {JSX.Element}
 */
export function ShoppingCart({ 
  cart, 
  onUpdateQuantity, 
  onRemoveItem, 
  onClearCart 
}) {
  const subtotal = cart.reduce((sum, item) => {
    return sum + (Number(item.price || 0) * Number(item.quantity || 1));
  }, 0);

  return (
    <Card>
      <CardHeader>
        <CardTitle className="flex items-center justify-between">
          <div className="flex items-center gap-2">
            <ShoppingCart className="h-5 w-5" />
            Pesanan ({cart.length} item)
          </div>
          {cart.length > 0 && (
            <Button
              type="button"
              variant="ghost"
              size="sm"
              onClick={onClearCart}
              className="text-red-600 hover:text-red-800"
            >
              Bersihkan
            </Button>
          )}
        </CardTitle>
      </CardHeader>
      <CardContent>
        {cart.length === 0 ? (
          <p className="text-gray-600 text-center py-8">
            Belum ada produk yang dipilih
          </p>
        ) : (
          <div className="space-y-3">
            {cart.map((item) => (
              <CartItem
                key={item.id}
                item={item}
                onUpdateQuantity={onUpdateQuantity}
                onRemove={onRemoveItem}
              />
            ))}
            <div className="border-t pt-3 mt-3">
              <div className="flex justify-between items-center text-lg font-bold text-green-600">
                <span>Total:</span>
                <span>Rp {subtotal.toLocaleString('id-ID')}</span>
              </div>
            </div>
          </div>
        )}
      </CardContent>
    </Card>
  );
}